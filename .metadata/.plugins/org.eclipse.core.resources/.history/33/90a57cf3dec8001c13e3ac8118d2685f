#ifndef ALBUMES_H_
#define ALBUMES_H_

#define DESCRIPCION 51
#define NOMBRE 51
//tipo artista
#define SOLISTA 1
#define BANDA 2

typedef struct{

	int dia ;
}eFecha;

typedef struct{

	int codigoGenero ;
	char descripcion;
}eGenero;

typedef struct{

	int codigoArtista ;
	char nombreArtista [NOMBRE];

}eArtista;

typedef struct{
	int tipoArtista ;
	int codigoArtista ;
	char descripcion [NOMBRE];

}eTipoArtista;

typedef struct{

	int codigoAlbum ;
	char titulo [DESCRIPCION];
	float importe ;
}eAlbum;




#endif /* ALBUMES_H_ */
